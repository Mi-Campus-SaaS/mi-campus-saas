# Application Configuration
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_PATH=./data/dev.sqlite

# JWT Configuration (REQUIRED - no defaults for security)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-for-testing
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long-for-testing

# JWT Expiration (optional - has defaults)
JWT_EXPIRES_IN=15m
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=uploads

# OpenTelemetry (optional - has defaults)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SERVICE_NAME=mi-campus-backend
OTEL_SERVICE_VERSION=1.0.0

# SMTP Configuration (optional - has defaults)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=password
SMTP_FROM=test@example.com

# CORS Configuration (optional)
# Comma-separated list of allowed origins. Supports wildcards:
# - https://*.example.com (subdomains)
# - http://localhost:* (any port)
# - https://app-*.vercel.app (dynamic subdomains)
CORS_ALLOWLIST=http://localhost:5173,http://localhost:8080
# Allow server-to-server requests (no Origin header)
CORS_ALLOW_SERVER_TO_SERVER=false

# Rate Limiting (optional - has defaults)
AUTH_THROTTLE_LIMIT=5
AUTH_THROTTLE_TTL_SECONDS=60

