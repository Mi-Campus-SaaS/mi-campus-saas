{
  "name": "mi-campus-saas",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n frontend,backend -c \"cyan,magenta\" \"yarn --cwd apps/frontend dev\" \"yarn --cwd apps/backend start:dev\"",
    "dev:frontend": "yarn --cwd apps/frontend dev",
    "dev:backend": "yarn --cwd apps/backend start:dev",
    "dev:otel": "docker-compose -f docker-compose.otel.yml up -d",
    "dev:full": "yarn dev:otel && yarn dev",
    "build": "yarn --cwd apps/frontend build && yarn --cwd apps/backend build",
    "test": "yarn --cwd apps/backend test",
    "test:e2e": "playwright test",
    "test:visual": "playwright test -g visual-regression",
    "lint": "yarn --cwd apps/frontend lint && yarn --cwd apps/backend lint",
    "format": "yarn --cwd apps/frontend format && yarn --cwd apps/backend format",
    "budgets:bundle": "yarn --cwd apps/frontend build && size-limit",
    "budgets:perf": "node tools/perf/lhci-run.cjs",
    "ci:budgets": "yarn budgets:bundle && yarn budgets:perf",
    "ci:visual": "yarn test:visual",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.4.2",
    "@lhci/cli": "^0.14.0",
    "puppeteer": "^23.7.0",
    "@size-limit/file": "^10.0.0",
    "size-limit": "^10.0.0"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx,js,jsx}": [
      "yarn --cwd apps/frontend eslint --fix"
    ],
    "apps/backend/**/*.ts": [
      "yarn --cwd apps/backend eslint --fix"
    ],
    "**/*.{json,md,css,scss,html,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
